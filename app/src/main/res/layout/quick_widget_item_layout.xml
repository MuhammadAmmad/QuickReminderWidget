<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/clickeable_row"
    android:orientation="horizontal"
    android:layout_height="@dimen/normal_item_height"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/item_text"
        android:gravity="center_vertical"
        android:textSize="@dimen/widget_row_text_size"
        android:text="10:00 PM"
        android:paddingLeft="@dimen/normal_item_vertical_padding"
        android:paddingStart="@dimen/normal_item_vertical_padding"
        android:paddingRight="@dimen/normal_item_vertical_padding"
        android:paddingEnd="@dimen/normal_item_vertical_padding"
        android:paddingTop="@dimen/normal_item_horizontal_padding"
        android:paddingBottom="@dimen/normal_item_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>